@model NewsContentManagement.Models.News
    @using Microsoft.AspNet.Identity;
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        @Model.Title
        <small>
            by
            @Model.Authors.authorName
           
        </small>
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">HomePage</a>
        </li>
        <li class="breadcrumb-item active">@Model.Title</li>
    </ol>

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Date/Time -->
            <p><b>Author:</b> @Model.Authors.authorName , <b>Category:</b> @Model.Categories.categoryName</p>

            <hr>

            <!-- Post Content -->
            <p class="lead">
                @Html.Raw(Model.Content)
                @*@Model.Content*@
            </p>

            <hr>
            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
             
                  
                  
                    @using (Html.BeginForm("NewsDetails", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.TextArea("commentText",null,new { @class="form-control",rows=3})
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    }
                   
                 
                   
                </div>
            </div>

            <!-- Single Comment -->
            @foreach (var item in Model.Comments)
            {
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">Guest</h5>
                            @item.commentContent

                    </div>
                </div>
            }
           

          
         

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card mb-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="@Url.Action("Index","Home")">All News</a>
                                </li>
                               @foreach (var item in ViewData["categories"] as List<NewsContentManagement.Models.Category>)
                               {
                                <li>
                                    <a href="/Home/NewsFilter/@item.Id">@item.categoryName (@item.News.Count)</a>
                                </li>
                               }
                                
                               
                            </ul>
                        </div>
                   
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->


